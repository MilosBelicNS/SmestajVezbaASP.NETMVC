@model SortFiltPagVezba.Models.Smestaj
<tr>
    <td style="font-size: 16px">
        @Html.DisplayFor(m => m.Naziv)
    </td>
    <td style="font-size: 16px">
        @Html.DisplayFor(m => m.Opis)
    </td>
    <td style="font-size: 16px">
        @Html.DisplayFor(m => m.Adresa)
    </td>
    <td style="font-size: 16px">
        @Html.DisplayFor(m => m.Ocena)
    </td>
 
    <td>
        @Html.ActionLink("Izmena", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning btn-sm" }) |
        @Html.ActionLink("Detalji", "Details", new { id = Model.Id }, new { @class = "btn btn-info btn-sm" }) |
        @Html.ActionLink("Brisanje", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger btn-sm" })
    </td>
</tr>
